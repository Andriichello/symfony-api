{% extends 'base.html.twig' %}

{% block title %}Authors{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    .list-authors {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        gap: 1rem;
    }

    .item-author {
        width: 100%;
        background: #f3f3f3;

        padding: 1rem;
        border-radius: 10px;
    }

    .item-author h2 {
        margin: 0;
    }

    .item-author p {
        margin: 0.25rem 0 0;
    }
</style>

<div class="example-wrapper">
    <h1>Authors</h1>

    <div class="list-authors">
        {% for author in authors %}
            <div class="item-author">
                <h2>{{ author.name }}</h2>
                {% if (author.alias) %}
                    <p>{{ author.alias }}</p>
                {% endif %}
            </div>
        {% endfor %}

        <p style="align-self: end;">
            Showing <span style="font-weight: bold;">{{ authors|length }} records</span>
        </p>
    </div>
</div>
{% endblock %}
